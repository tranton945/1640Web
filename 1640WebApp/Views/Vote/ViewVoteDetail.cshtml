@model List<dynamic>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-image: url("https://i.pinimg.com/564x/27/b5/d3/27b5d38b2a5ccb57f454dd3a7f38594b.jpg");
            background-size: cover;
            background-attachment: fixed;
            margin-top: 100px;
        }

        .card {
            margin: auto;
            width: 90%;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.3);
        }

        .form-check-label {
            font-weight: normal;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
            }

            .btn-primary:focus, .btn-primary.focus {
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5);
            }

    </style>
</head>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Vote Detail</div>
                @foreach (var vote in Model)
                {
                    <h1 class="card mt-5">Vote Title: @vote.Title</h1>
                    <p class="card-text">Vote Description: @vote.Description</p>
                    <p class="card-text">Vote Created Date: @vote.CreatedDate</p>
                    <p class="card-text">Vote Closed Date: @vote.ClosedDate</p>
                    <form method="post" action="@Url.Action("ViewVoteDetail")">
                        <input type="hidden" name="id" value="@vote.IdVote" />
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="option" id="option1" value="1">
                            <label class="form-check-label" for="option1">@vote.Option1</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="option" id="option2" value="2">
                            <label class="form-check-label" for="option2">@vote.Option2</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="option" id="option3" value="3">
                            <label class="form-check-label" for="option3">@vote.Option3</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="option" id="option4" value="4">
                            <label class="form-check-label" for="option4">@vote.Option4</label>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Vote</button>
                    </form>
                   
                    
                }
            </div>
        </div>
    </div>

</div>


                                                }